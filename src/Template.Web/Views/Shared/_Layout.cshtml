@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.Options
@using Template.Web
@using Template.Web.Infrastructure

@inject IHtmlLocalizer<Template.Web.SharedResource> SharedLocalizer
@inject IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = typeof(Startup).Assembly.GetName().Version;
}

@section metas{
    @RenderSection("metas", false)
}

@section styles{
    @RenderSection("styles", false)
}

<div id="pageId" class="onit-page">
    <div class="onit-page-sticky-top" id="onit-page-sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm onit-page-menu">
            <div class="container-fluid">
                @{
                    string userRole = null;
                    string badgeClass = null;
                    string badgeTextClass = null;
                    string roleDisplay = null;
                    if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        userRole = User.FindFirst("Ruolo")?.Value ?? "User";
                        badgeClass = userRole == "SuperAdmin" ? "badge-superadmin" :
                                     userRole == "Admin" ? "bg-warning" :
                                     "bg-info";
                        badgeTextClass = userRole == "SuperAdmin" ? "text-dark" :
                                         userRole == "Admin" ? "text-dark" :
                                         "text-dark";
                        roleDisplay = userRole == "SuperAdmin" ? "Super Admin" :
                                      userRole == "Admin" ? "Admin" :
                                      "Utente";
                    }
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var isSuperAdminActive = currentController == "SuperAdmin";
                }
                
                <a class="navbar-brand" href="/">
                    <img class="onit-suites-logo" src="~/images/smarthub_navbar.jpeg" alt="Logo" style="max-height: 80px;" />
                </a>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="d-none d-lg-flex align-items-center ms-3">
                        <span class="text-dark me-2">Ciao, <b>@User.Identity.Name</b></span>
                    </div>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {

                            @if (userRole == "SuperAdmin")
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm text-dark role-action-btn @(isSuperAdminActive ? "active" : "")" asp-controller="SuperAdmin" asp-action="Dashboard">
                                        <i class="fa-solid fa-chart-line me-1"></i>SuperAdmin
                                    </a>
                                </li>
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm text-dark role-action-btn" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fa-solid fa-sliders me-1"></i>Admin
                                    </a>
                                </li>
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm text-dark role-action-btn" asp-controller="Prenotazione" asp-action="Mappa">
                                        <i class="fa-solid fa-map me-1"></i>Utente
                                    </a>
                                </li>
                            }
                            else if (userRole == "Admin")
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm text-dark role-action-btn" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fa-solid fa-sliders me-1"></i>Admin
                                    </a>
                                </li>
                                <li class="nav-item me-2">
                                    <a class="btn btn-warning btn-sm text-dark role-action-btn" asp-controller="Prenotazione" asp-action="Mappa">
                                        <i class="fa-solid fa-map me-1"></i>Utente
                                    </a>
                                </li>
                            }
                            else if (userRole == "User" || userRole == "Utente")
                            {
                            }

                            <li class="nav-item @(userRole == "User" || userRole == "Utente" ? "" : "ms-3 ps-3 border-start")">
                                <a class="btn btn-info btn-sm text-dark role-action-btn" asp-controller="AreaRiservata" asp-action="Index">
                                    <i class="fa-solid fa-user me-1"></i>Area Riservata
                                </a>
                            </li>
                            
                            <li class="nav-item ms-3 ps-3 border-start">
                                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm text-white role-action-btn">
                                        ESCI
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                        }
                    </ul>
                </div>
            </div>
        </nav>
        
        @RenderSection("pageTitle", false)
    </div>

    @RenderSection("pageSubtitle", false)
    
    <div class="container-fluid mt-4">
        @RenderBody()
    </div>
</div>

@section scripts{
    @try { 
        @Html.Raw(this.RenderAlertsWithToastify()) 
    } catch { }
    @RenderSection("scripts", false)
}