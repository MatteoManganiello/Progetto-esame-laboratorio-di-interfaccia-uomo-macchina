@model Template.Web.Features.Register.RegisterViewModel
@{
    ViewData["Title"] = "Registrazione";
}

<div class="container-fluid min-vh-100 p-0">
    <div class="row g-0 min-vh-100">
        <div class="col-lg-6 d-none d-lg-flex splash-image">
            <video class="splash-video" autoplay muted loop playsinline>
                <source src="/videos/video_login_registrazione.mp4" type="video/mp4" />
            </video>
            <div class="splash-overlay p-5">
                <h1 class="display-5 fw-bold">Crea il tuo account</h1>
                <p class="lead">Registrati e inizia subito a prenotare.</p>
            </div>
        </div>
        <div class="col-lg-6 d-flex align-items-center justify-content-center p-4">
            <div class="w-100" style="max-width: 520px;">
                <h2 class="text-center mb-4">Registrati</h2>
                
                <form asp-action="Register" method="post" role="form" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="onit-label-required">Nome</label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="FirstName" class="form-control" placeholder="Es. Mario" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="onit-label-required">Cognome</label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="LastName" class="form-control" placeholder="Es. Rossi" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="onit-label-required">Email</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Email" class="form-control" type="email" placeholder="nome@esempio.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="onit-label-required">Password</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="onit-label-required">Conferma Password</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">Registrati</button>
                        
                        <div>
                            Hai gi√† un account? <a href="@Url.Action("Login", "Login")">Accedi qui</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .splash-image {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }
    .splash-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 24px;
        border-radius: 16px;
    }
    .splash-overlay {

        width: 100%;
        position: relative;
        z-index: 1;
        color: #000;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>