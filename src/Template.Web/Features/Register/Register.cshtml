@model Template.Web.Features.Register.RegisterViewModel
@{
    ViewData["Title"] = "Registrazione";
}

<div class="container-fluid min-vh-100 p-0">
    <div class="row g-0 min-vh-100">
        <div class="col-lg-6 d-none d-lg-flex splash-image align-items-center justify-content-center">
            <div id="splashCarouselLogin" class="carousel slide splash-carousel w-100 h-80" data-bs-ride="carousel"
                data-bs-interval="4000">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>

                <div class="carousel-inner h-80">
                    <div class="carousel-item active h-80">
                        <img src="~/images/img_carousel_1.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-1" />
                    </div>
                    <div class="carousel-item h-80">
                        <img src="~/images/img_carousel_2.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-2" />
                    </div>
                    <div class="carousel-item h-80">
                        <img src="~/images/img_carousel_3.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-3" />
                    </div>
                </div>

            </div>
        </div>
        
        <div class="col-lg-6 d-flex align-items-center justify-content-center p-4">
            <div class="w-100" style="max-width: 520px;">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Registrati</h2>

                        <form asp-action="Register" method="post" role="form" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="onit-label-required">Nome</label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="FirstName" class="form-control" placeholder="Es. Mario" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="onit-label-required">Cognome</label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="LastName" class="form-control" placeholder="Es. Rossi" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="onit-label-required">Email</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Email" class="form-control" type="email" placeholder="nome@esempio.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="onit-label-required">Password</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="onit-label-required">Conferma Password</label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success btn-lg w-100 mb-3">Registrati</button>

                                <div>
                                    Hai gi√† un account? <a href="@Url.Action("Login", "Login")">Accedi qui</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .splash-image {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }
    .splash-carousel-img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        border-radius: 16px;
    }
    .splash-overlay {

        width: 100%;
        position: relative;
        z-index: 1;
        color: #000;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>