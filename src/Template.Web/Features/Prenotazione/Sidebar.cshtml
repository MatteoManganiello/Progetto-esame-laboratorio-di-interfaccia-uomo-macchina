@section styles {

<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />

}

<div class="sidebar-area d-flex flex-column h-100 position-relative overflow-hidden">

    <div v-if="postazioneSelezionata" class="animate__animated animate__fadeIn d-flex flex-column h-100 pb-5">

        <div class="mb-4">
            <div class="d-flex align-items-center fw-bold small text-uppercase mb-2 spacing-1" 
                 :class="{
                    'text-state-free': postazioneSelezionata.postiOccupati == 0,
                    'text-state-partial': postazioneSelezionata.postiOccupati > 0 && postazioneSelezionata.postiOccupati < postazioneSelezionata.postiTotali,
                    'text-state-full': postazioneSelezionata.postiOccupati >= postazioneSelezionata.postiTotali
                 }">
                <i class="fa-solid me-2" :class="postazioneSelezionata.tipo === 'Ristorante' ? 'fa-utensils' : 'fa-building'"></i>
                {{ postazioneSelezionata.tipo }}
            </div>

            <h2 class="fw-bolder text-dark m-0 mb-2">{{ postazioneSelezionata.nome }}</h2>

            <span class="badge rounded-pill border" 
                  :class="{
                      'bg-state-free': postazioneSelezionata.postiOccupati == 0,
                      'bg-state-partial': postazioneSelezionata.postiOccupati > 0 && postazioneSelezionata.postiOccupati < postazioneSelezionata.postiTotali,
                      'bg-state-full': postazioneSelezionata.postiOccupati >= postazioneSelezionata.postiTotali
                  }">
                <i class="fa-solid fa-circle me-1 small"></i>
                <span v-if="postazioneSelezionata.postiOccupati == 0">Libero</span>
                <span v-else-if="postazioneSelezionata.postiOccupati >= postazioneSelezionata.postiTotali">Completo / Occupato</span>
                <span v-else>Parzialmente Occupato</span>
            </span>
        </div>

        <div class="flex-grow-1">
            <div v-if="postazioneSelezionata.tipo === 'Ristorante'" class="booking-card bg-light rounded-4 p-4 mb-3">
                <div v-if="postazioneSelezionata.postiTotali > postazioneSelezionata.postiOccupati">
                    <label class="form-label fw-bold text-dark mb-3 d-block">Quanti posti vuoi prenotare?</label>
                    <div class="input-group input-group-lg mb-4 shadow-sm">
                        <span class="input-group-text bg-white text-primary border-end-0 ps-3">
                            <i class="fa-solid fa-user-group"></i>
                        </span>
                        <select class="form-select border-start-0 fw-bold text-dark ps-2" v-model="numeroPostiRichiesti" style="box-shadow: none;">
                            <option v-for="n in (postazioneSelezionata.postiTotali - postazioneSelezionata.postiOccupati)" :value="n">
                                {{ n }} {{ n === 1 ? 'Persona' : 'Persone' }}
                            </option>
                        </select>
                    </div>
                </div>
                <div v-else class="alert alert-danger mb-4 shadow-sm border-0 d-flex align-items-center">
                    <i class="fa-solid fa-circle-exclamation me-3 fa-lg"></i>
                    <div><strong>Posti esauriti.</strong></div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center small bg-white p-3 rounded-3 border">
                    <span class="text-muted fw-semibold">Posti disponibili:</span>
                    <span class="badge rounded-pill px-3 py-2 fs-6" :class="{
                              'bg-state-free': postazioneSelezionata.postiOccupati == 0,
                              'bg-state-partial': postazioneSelezionata.postiOccupati > 0 && postazioneSelezionata.postiOccupati < postazioneSelezionata.postiTotali,
                              'bg-state-full': postazioneSelezionata.postiOccupati >= postazioneSelezionata.postiTotali
                          }">
                        <i class="fa-solid fa-chair me-2 opacity-50"></i>
                        <strong>{{ postazioneSelezionata.postiTotali - postazioneSelezionata.postiOccupati }}</strong>
                        <span class="opacity-50 mx-1">/</span> {{ postazioneSelezionata.postiTotali }}
                    </span>
                </div>
            </div>

            <div v-else class="booking-card rounded-4 p-4 mb-3 d-flex align-items-start" 
                 :class="{
                    'bg-state-free': postazioneSelezionata.postiOccupati == 0,
                    'bg-state-full': postazioneSelezionata.postiOccupati > 0
                 }">
                <div class="bg-white p-3 rounded-circle me-3 shadow-sm" 
                     :class="{
                        'text-state-free': postazioneSelezionata.postiOccupati == 0,
                        'text-state-full': postazioneSelezionata.postiOccupati > 0
                     }">
                    <i class="fa-solid fa-xl" :class="postazioneSelezionata.postiOccupati == 0 ? 'fa-door-open' : 'fa-door-closed'"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-1" :class="postazioneSelezionata.postiOccupati == 0 ? 'text-state-free' : 'text-state-full'">
                        {{ postazioneSelezionata.postiOccupati == 0 ? 'Prenotazione Esclusiva' : 'Non Disponibile' }}
                    </h5>
                    <p class="opacity-75 small mb-0 lh-sm" :class="postazioneSelezionata.postiOccupati == 0 ? 'text-state-free' : 'text-state-full'">
                        <span v-if="postazioneSelezionata.postiOccupati == 0">Uso esclusivo. Max {{ postazioneSelezionata.postiTotali }} persone.</span>
                        <span v-else>Questo spazio è già occupato.</span>
                    </p>
                </div>
            </div>

            <div v-if="postazioneSelezionata.postiOccupati < postazioneSelezionata.postiTotali || (postazioneSelezionata.tipo === 'Ristorante' && postazioneSelezionata.postiTotali > postazioneSelezionata.postiOccupati)" 
                 class="bg-white border rounded-4 p-4 shadow-sm mb-3">
                
                <h6 class="fw-bold text-uppercase text-muted small mb-3 spacing-1">Riepilogo Costi</h6>
                
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-dark">
                        <i class="fa-solid fa-tag me-2 text-muted"></i>
                        <span v-if="postazioneSelezionata.tipo === 'Ristorante'">Menu x {{ numeroPostiRichiesti }}</span>
                        <span v-else>Tariffa Giornaliera</span>
                    </span>
                    <span class="fw-semibold">
                        <span v-if="postazioneSelezionata.tipo === 'Ristorante'" class="text-muted small me-2">
                            ({{ numeroPostiRichiesti }} x €{{ getPrezzoUnitario(postazioneSelezionata.tipo) }})
                        </span>
                    </span>
                </div>

                <hr class="my-3 text-muted opacity-25">

                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5 text-dark">Totale</span>
                    <span class="fw-bold fs-4 text-primary">€ {{ getPrezzoTotale() }},00</span>
                </div>
            </div>
        </div>

        <div class="mt-auto pt-4 border-top">
            <div class="d-grid gap-3">
                <button class="btn btn-primary btn-lg py-3 fw-bold shadow-sm d-flex justify-content-center align-items-center rounded-pill animate__animated animate__pulse animate__faster"
                        v-on:click="confermaPrenotazione"
                        :disabled="loadingBtn || postazioneSelezionata.postiOccupati >= postazioneSelezionata.postiTotali">
                    <span v-if="loadingBtn" class="spinner-border spinner-border-sm me-2"></span>
                    <i v-else class="fa-solid fa-receipt me-2"></i>
                    <span v-if="!loadingBtn">Conferma e Paga</span>
                </button>
                <button class="btn btn-light btn-lg py-2 fw-semibold text-muted rounded-pill border-0" v-on:click="postazioneSelezionata = null">
                    Annulla selezione
                </button>
            </div>
        </div>
    </div>

    <div v-else class="text-center h-100 d-flex flex-column justify-content-center align-items-center p-4 animate__animated animate__fadeIn">
        <div class="mb-6 p-2">
            <img src="~/images/SmartHub.png" alt="Seleziona" class="img-fluid" style="max-width: 200px; opacity: 0.8;">
        </div>
        <p class="text-muted mb-10 col-10 mx-auto fw-bold">Clicca su una postazione sulla mappa.</p>
        
        <div class="legend-box bg-light p-4 rounded-4 text-start w-100 border-top border-light-subtle shadow-sm">
            <h6 class="fw-bold small text-uppercase text-muted mb-3 spacing-1 ls-1">Legenda Mappa</h6>
            <div class="d-flex align-items-center mb-3 p-2 bg-white rounded-3 border border-light-subtle">
                <span class="legend-indicator bg-success rounded-2 shadow-sm me-3"></span>
                <div><span class="d-block fw-bold text-dark fs-6">Libero</span></div>
            </div>
            <div class="d-flex align-items-center mb-3 p-2 bg-white rounded-3 border border-light-subtle">
                <span class="legend-indicator bg-warning rounded-2 shadow-sm me-3"></span>
                <div><span class="d-block fw-bold text-dark fs-6">Parzialmente Occupato</span></div>
            </div>
            <div class="d-flex align-items-center mb-3 p-2 bg-white rounded-3 border border-light-subtle">
                <span class="legend-indicator bg-danger rounded-2 shadow-sm me-3"></span>
                <div><span class="d-block fw-bold text-dark fs-6">Occupato / Pieno</span></div>
            </div>
        </div>
    </div>
</div>

