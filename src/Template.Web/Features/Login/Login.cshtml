@model Template.Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid min-vh-100 p-0">
    <div class="row g-0 min-vh-100">
        <div class="col-lg-6 d-none d-lg-flex splash-image align-items-center justify-content-center">
            <div id="splashCarouselLogin" class="carousel slide splash-carousel w-100 h-80" data-bs-ride="carousel"
                data-bs-interval="4000">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#splashCarouselLogin" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>

                <div class="carousel-inner h-80">
                    <div class="carousel-item active h-80">
                        <img src="~/images/img_carousel_1.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-1" />
                    </div>
                    <div class="carousel-item h-80">
                        <img src="~/images/img_carousel_2.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-2" />
                    </div>
                    <div class="carousel-item h-80">
                        <img src="~/images/img_carousel_3.jpeg" class="d-block w-90 h-90 splash-carousel-img mx-auto"
                            style="object-fit: contain;" alt="slide-3" />
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-6 d-flex align-items-center justify-content-center p-4">
            <div class="w-100" style="max-width: 420px;">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Accedi</h2>

                        <form method="post" role="form" autocomplete="off">
                            <input asp-for="ReturnUrl" type="hidden" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group">
                                <label asp-for=Email class="onit-label-required"></label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="Email" class="form-control" type="text" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for=Password class="onit-label-required"></label>
                                <div class="input-group onit-input-group-union">
                                    <input asp-for="Password" class="form-control" type="password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="form-check form-switch">
                                    <input asp-for="RememberMe" class="form-check-input" role="switch">
                                    <label asp-for="RememberMe" class="form-check-label">Rimani Connesso</label>
                                </div>
                            </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success w-100 btn-lg">Accedi</button>

                                <div class="mt-3">
                                    Non hai ancora un account?
                                    <a href="@Url.Action("Register", "Register")">Registrati ora</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .splash-image {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }

    .splash-carousel-img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        border-radius: 16px;
    }

    .splash-overlay {
        width: 100%;
        position: relative;
        z-index: 1;
        color: #000;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>