@model Template.Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid min-vh-100 p-0">
    <div class="row g-0 min-vh-100">
        <div class="col-lg-6 d-none d-lg-flex splash-image">
            <video class="splash-video" autoplay muted loop playsinline>
                <source src="/videos/video_login_registrazione.mp4" type="video/mp4" />
            </video>
            <div class="splash-overlay p-5">
                <h1 class="display-5 fw-bold">Benvenuto</h1>
                <p class="lead">Accedi alla piattaforma o registrati in pochi secondi.</p>
            </div>
        </div>
        <div class="col-lg-6 d-flex align-items-center justify-content-center p-4">
            <div class="w-100" style="max-width: 420px;">
                <h2 class="text-center mb-4">Accedi</h2>

                <form method="post" role="form" autocomplete="off">
                    <input asp-for="ReturnUrl" type="hidden" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for=Email class="onit-label-required"></label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Email" class="form-control" type="text" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for=Password class="onit-label-required"></label>
                        <div class="input-group onit-input-group-union">
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check form-switch">
                            <input asp-for="RememberMe" class="form-check-input" role="switch">
                            <label asp-for="RememberMe" class="form-check-label">Rimani Connesso</label>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success w-100 btn-lg">Accedi</button>
                        
                        <div class="mt-3">
                            Non hai ancora un account? 
                            <a href="@Url.Action("Register", "Register")">Registrati ora</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .splash-image {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }
    .splash-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 24px;
        border-radius: 16px;
    }
    .splash-overlay {
        width: 100%;
        position: relative;
        z-index: 1;
        color: #000;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>