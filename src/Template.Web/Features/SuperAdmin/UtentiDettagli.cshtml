@using Template.Web.Features.SuperAdmin
@model List<UtenteDettaglioDto>

@{
    ViewData["Title"] = "Gestione Utenti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">
                    <i class="fas fa-users-cog"></i> Gestione Utenti
                </h1>
                <a href="@Url.Action("Dashboard", "SuperAdmin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Torna al Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Filtri e Search -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <input type="text" class="form-control" id="searchInput" placeholder="Cerca per email o nome...">
                </div>
            </div>
        </div>
    </div>

    <!-- Tabella Utenti -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Email</th>
                                <th>Nome</th>
                                <th>Ruolo</th>
                                <th class="text-center">Prenotazioni</th>
                                <th class="text-end">Spesa Totale</th>
                                <th class="text-center">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var utente in Model)
                            {
                                var roleClass = utente.Ruolo == "SuperAdmin" ? "danger" :
                                               utente.Ruolo == "Admin" ? "warning" : "info";
                                
                                <tr>
                                    <td>
                                        <strong>@utente.Email</strong>
                                    </td>
                                    <td>@utente.Nome</td>
                                    <td>
                                        <span class="badge bg-@roleClass">@utente.Ruolo</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@utente.NumPrenotazioni</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>â‚¬@utente.SpesaTotale.ToString("N2")</strong>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#dettagliModal" onclick="mostraDettagli(@utente.Id)">
                                            <i class="fas fa-eye"></i> Dettagli
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Dettagli Utente -->
<div class="modal fade" id="dettagliModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="dettagliTitle"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="dettagliContent">
                <!-- Riempito da JavaScript -->
            </div>
        </div>
    </div>
</div>

<script>
    // Ricerca in tempo reale
    document.getElementById('searchInput').addEventListener('keyup', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    function mostraDettagli(userId) {
        // Simulazione - in un'app reale, faresti una chiamata API
        document.getElementById('dettagliTitle').textContent = 'Dettagli Utente';
        document.getElementById('dettagliContent').innerHTML = `
            <p>ID Utente: ${userId}</p>
            <p>Caricamento dettagli...</p>
        `;
    }
</script>
