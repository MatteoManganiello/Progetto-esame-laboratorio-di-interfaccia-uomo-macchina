@model Template.Web.Features.AreaRiservata.AreaRiservataViewModel
@{
    ViewData["Title"] = "Area Riservata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5 ">
    <div class="container">
        

        <div class="row g-4">
            <!-- Profilo Utente -->
            <div class="col-lg-4">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-header bg-gradient-info text-white">
                        <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Profilo Utente</h5>
                    </div>
                    <div class="card-body">
                        <div class="profile-info">
                            <div class="info-item mb-3">
                                <i class="fas fa-user text-info me-3"></i>
                                <div>
                                    <small class="text-muted d-block">Nome Completo</small>
                                    <strong>@Model.Nome</strong>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <i class="fas fa-envelope text-info me-3"></i>
                                <div>
                                    <small class="text-muted d-block">Email</small>
                                    <strong>@Model.Email</strong>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-shield-alt text-info me-3"></i>
                                <div>
                                    <small class="text-muted d-block">Ruolo</small>
                                    <span class="badge bg-@(Model.Ruolo == "Admin" ? "warning" : Model.Ruolo == "SuperAdmin" ? "danger" : "secondary") fs-6">
                                        @Model.Ruolo
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ordini e Acquisti -->
            <div class="col-lg-8">
                <!-- Ultimi Ordini -->
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-gradient-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Ultimi Ordini Effettuati</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.UltimiOrdini != null && Model.UltimiOrdini.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th><i class="fas fa-calendar me-1"></i>Data</th>
                                            <th><i class="fas fa-utensils me-1"></i>Descrizione</th>
                                            <th><i class="fas fa-euro-sign me-1"></i>Prezzo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ordine in Model.UltimiOrdini)
                                        {
                                            <tr class="align-middle">
                                                <td>
                                                    <span class="badge bg-light text-dark">
                                                        @ordine.Data.ToString("dd/MM/yyyy")
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-concierge-bell text-primary me-2"></i>
                                                        @ordine.Descrizione
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="fw-bold text-success">
                                                        € @ordine.Prezzo.ToString("F2")
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Nessun ordine recente</h5>
                                <p class="text-muted">I tuoi ordini appariranno qui quando effettuerai una prenotazione.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Acquisti più frequenti -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient-success text-white">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>Acquisti più frequenti</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.AcquistiFrequenti != null && Model.AcquistiFrequenti.Any())
                        {
                            <div class="row g-3">
                                @foreach (var acquisto in Model.AcquistiFrequenti)
                                {
                                    <div class="col-md-6">
                                        <div class="card border-0 bg-light h-100">
                                            <div class="card-body d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-utensils text-success me-3 fa-lg"></i>
                                                    <div>
                                                        <h6 class="mb-1">@acquisto.Descrizione</h6>
                                                        <small class="text-muted">@acquisto.Quantita prenotazioni</small>
                                                    </div>
                                                </div>
                                                <div class="progress-circle" data-percent="@((acquisto.Quantita * 100) / Model.AcquistiFrequenti.Max(a => a.Quantita))">
                                                    <span class="progress-number">@acquisto.Quantita</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Nessun acquisto frequente</h5>
                                <p class="text-muted">Effettua più prenotazioni per vedere le tue preferenze qui.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .bg-gradient-info {
        background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
    }
    .bg-gradient-success {
        background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
    }
    .avatar-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .profile-info .info-item {
        display: flex;
        align-items: center;
    }
    .progress-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: conic-gradient(#00b894 0% var(--percent), #ecf0f1 var(--percent) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    .progress-circle::before {
        content: '';
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        position: absolute;
    }
    .progress-number {
        position: relative;
        z-index: 1;
        font-weight: bold;
        color: #00b894;
    }
</style>
