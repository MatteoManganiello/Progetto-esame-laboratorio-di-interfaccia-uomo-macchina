@{
    ViewData["Title"] = "Notifiche Azienda";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 mb-2">
                <i class="fa-solid fa-bell text-warning me-2"></i>Notifiche Azienda
            </h1>
            <p class="text-muted">Inserisci comunicazioni e avvisi per i dipendenti</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0">
            <i class="fa-solid fa-circle-check me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-controller="Admin" asp-action="Notifiche" method="post">
                <div class="mb-3">
                    <label class="form-label">Ultime notifiche</label>
                    <textarea class="form-control" name="notifiche" rows="10" placeholder="Inserisci qui le notifiche aziendali...">@ViewBag.Notifiche</textarea>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="fa-solid fa-save me-2"></i>Salva notifiche
                    </button>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary">Torna alla dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>
