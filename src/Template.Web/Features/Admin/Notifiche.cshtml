@using Template.Web.Features.Admin
@{
    ViewData["Title"] = "Notifiche Azienda";
    Layout = "_Layout";
    var notificheList = ViewBag.NotificheList as List<NotificaItem> ?? new List<NotificaItem>();
    while (notificheList.Count < 3)
    {
        notificheList.Add(new NotificaItem());
    }
}

<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0">
            <i class="fa-solid fa-circle-check me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4">
            <div class="d-flex align-items-center gap-2">
                <i class="fa-solid fa-bell text-warning"></i>
                <h2 class="h5 mb-0 fw-semibold">Notifiche Azienda</h2>
            </div>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="Notifiche" method="post">
                @for (var i = 0; i < notificheList.Count; i++)
                {
                    <div class="border rounded-3 p-3 mb-3 bg-light bg-opacity-50">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0 fw-semibold text-dark">Notifica #@(i + 1)</h6>
                            <span class="badge bg-primary-subtle text-primary">Comunicazione</span>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Data </label>
                                <input class="form-control" type="date" name="notifiche[@i].Data" value="@notificheList[i].Data" />
                            </div>
                            <div class="col-md-9">
                                <label class="form-label">Titolo </label>
                                <input class="form-control" name="notifiche[@i].Titolo" value="@notificheList[i].Titolo" placeholder="Es. Manutenzione rete" />
                                <small class="text-muted">Max 6-8 parole</small>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Messaggio</label>
                                <textarea class="form-control" name="notifiche[@i].Contenuto" rows="3" placeholder="Scrivi qui la notifica...">@notificheList[i].Contenuto</textarea>
                                <small class="text-muted">Usa un linguaggio semplice e diretto</small>
                            </div>
                        </div>
                    </div>
                }
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save me-2"></i>Salva notifiche
                    </button>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-danger">Torna alla dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>
