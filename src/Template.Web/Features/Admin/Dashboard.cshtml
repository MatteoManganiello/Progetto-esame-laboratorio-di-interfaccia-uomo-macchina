@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Card Notifiche Azienda -->
        <div class="col-lg-6 pe-lg-4 border-end border-dark">
            <div class="card shadow-sm border-0 h-100 bg-primary bg-opacity-10">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fa-solid fa-bell me-2"></i>
                    <h5 class="mb-0">Notifiche Azienda</h5>
                </div>
                <div class="card-body">
                    <img src="~/images/notifiche.jpg" class="img-fluid rounded mb-3 admin-card-image" alt="Notifiche aziendali" />
                    <p class="text-muted mb-3">
                        Inserisci comunicazioni e aggiornamenti importanti per i clienti, inclusi avvisi di servizio, novità operative e informazioni utili per restare sempre aggiornati.
                    </p>
                    <a href="@Url.Action("Notifiche", "Admin")" class="btn btn-primary">
                        <i class="fa-solid fa-edit me-2"></i>Inserisci notifiche
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Menù Settimanale -->
        <div class="col-lg-6 ps-lg-4">
            <div class="card shadow-sm border-0 h-100 bg-success bg-opacity-10">
                <div class="card-header bg-success text-white d-flex align-items-center">
                    <i class="fa-solid fa-utensils me-2"></i>
                    <h5 class="mb-0">Menù Settimanale</h5>
                </div>
                <div class="card-body">
                    <img src="~/images/ristorante.jpg" class="img-fluid rounded mb-3 admin-card-image" alt="Menù settimanale" />
                    <p class="text-muted mb-3">
                        Aggiorna il menù della settimana per il ristorante aziendale.
                    </p>
                    <a href="@Url.Action("MenuSettimanale", "Admin")" class="btn btn-success">
                        <i class="fa-solid fa-edit me-2"></i>Modifica menù
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Utenti (Solo SuperAdmin) -->
        @if (User.FindFirst("Ruolo")?.Value == "SuperAdmin")
        {
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-danger text-white d-flex align-items-center">
                        <i class="fa-solid fa-users-gear me-2"></i>
                        <h5 class="mb-0">Gestisci Utenti</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            Modifica i ruoli e le autorizzazioni degli utenti
                        </p>
                        <ul class="list-unstyled mb-3">
                            <li class="mb-2">
                                <i class="fa-solid fa-check text-success me-2"></i>
                                Assegna ruoli (User, Admin, SuperAdmin)
                            </li>
                            <li class="mb-2">
                                <i class="fa-solid fa-check text-success me-2"></i>
                                Visualizza tutti gli utenti
                            </li>
                            <li>
                                <i class="fa-solid fa-check text-success me-2"></i>
                                Gestisci autorizzazioni
                            </li>
                        </ul>
                        <button class="btn btn-danger" disabled>
                            <i class="fa-solid fa-edit me-2"></i>Modifica (coming soon)
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
