@using System.Linq
@using Template.Web.Features.Admin
@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "_Layout";
    var notificheSuperAdmin = (ViewBag.NotificheSuperAdmin as System.Collections.Generic.IEnumerable<NotificaItem>)?.ToList()
        ?? new System.Collections.Generic.List<NotificaItem>();
    var nomeUtente = User.FindFirst("Nome")?.Value
        ?? User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
        ?? User.Identity?.Name
        ?? "Admin";
    var emailUtente = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
        ?? User.FindFirst("Email")?.Value
        ?? "-";
    var ruoloUtente = User.FindFirst("Ruolo")?.Value ?? "Admin";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Card Notifiche dal SuperAdmin -->
        <div class="col-lg-4 pe-lg-4 border-end border-dark">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white d-flex align-items-center">
                    <i class="fa-solid fa-user-shield me-2"></i>
                    <h5 class="mb-0">Profilo Admin</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@nomeUtente</div>
                            <div class="text-muted small">@emailUtente</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary-subtle text-primary">@ruoloUtente</span>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm border-0 bg-light bg-opacity-50" style="max-height: 420px;">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="fa-solid fa-shield-halved me-2"></i>
                    <h5 class="mb-0">Notifiche dal SuperAdmin</h5>
                </div>
                <div class="card-body" style="overflow-y: auto;">
                    @if (!notificheSuperAdmin.Any())
                    {
                        <p class="text-muted mb-0">Nessuna notifica disponibile.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var n in notificheSuperAdmin)
                            {
                                <div class="list-group-item bg-transparent px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold">@n.Titolo</div>
                                            <small class="text-muted">@n.Contenuto</small>
                                        </div>
                                        <span class="badge bg-danger-subtle text-danger">@n.Data</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Card Raggruppata Notifiche + Menù -->
        <div class="col-lg-8 ps-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-secondary text-white d-flex align-items-center">
                    <i class="fa-solid fa-layer-group me-2"></i>
                    <h5 class="mb-0">Gestione contenuti</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="border rounded-3 h-100 bg-primary bg-opacity-10 overflow-hidden">
                                <div class="card-header bg-primary text-white d-flex align-items-center">
                                    <i class="fa-solid fa-bell me-2"></i>
                                    <h6 class="mb-0">Notifiche Azienda</h6>
                                </div>
                                <div class="p-3">
                                <img src="~/images/notifiche.jpg" class="img-fluid rounded mb-3 admin-card-image" alt="Notifiche aziendali" />
                                <p class="text-muted mb-3">
                                    Inserisci comunicazioni e aggiornamenti importanti per i clienti, inclusi avvisi di servizio, novità operative e informazioni utili per restare sempre aggiornati.
                                </p>
                                <a href="@Url.Action("Notifiche", "Admin")" class="btn btn-primary">
                                    <i class="fa-solid fa-edit me-2"></i>Inserisci notifiche
                                </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded-3 h-100 bg-success bg-opacity-10 overflow-hidden">
                                <div class="card-header bg-success text-white d-flex align-items-center">
                                    <i class="fa-solid fa-utensils me-2"></i>
                                    <h6 class="mb-0">Menù Settimanale</h6>
                                </div>
                                <div class="p-3">
                                <img src="~/images/ristorante.jpg" class="img-fluid rounded mb-3 admin-card-image" alt="Menù settimanale" />
                                <p class="text-muted mb-3">
                                    Aggiorna il menù della settimana per il ristorante aziendale.
                                </p>
                                <a href="@Url.Action("MenuSettimanale", "Admin")" class="btn btn-success">
                                    <i class="fa-solid fa-edit me-2"></i>Modifica menù
                                </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
